{
  "description": "Pager configuration for web projects",
  "extends": [
    "github>pagerinc/renovate-config",
    ":pinAllExceptPeerDependencies"
  ],
  "branchPrefix": "renovate/",
  "stabilityDays": 2,
  "packageRules": [
    {
      "packageNames": ["cerebral"],
      "packagePatterns": ["^@cerebral/"],
      "groupSlug": "cerebral",
      "groupName": "cerebral monorepo"
    },
    {
      "description": "Auto update non-major Pager dependencies hosted at jFrog Artifactory",
      "packagePatterns": ["^@pgr/"],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "pager",
      "stabilityDays": 0,
      "automerge": true
    },
    {
      "description": "Auto update non-major safe web dependencies",
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "packagePatterns": ["^@fortawesome/", "^@sentry/", "^lodash."],
      "packageNames": [
        "axios",
        "mixpanel-browser",
        "moment",
        "socket.io-client",
        "twilio-video",
        "vue",
        "vuex",
        "react",
        "react-dom",
        "react-redux",
        "redux",
        "styled-components",
        "styled-normalize"
      ],
      "automerge": true
    },
    {
      "description": "Auto update patch safe web dependencies",
      "updateTypes": ["patch", "pin", "digest"],
      "packageNames": ["redux-saga", "react-router-dom", "reselect"],
      "automerge": true
    }
  ],
  "timezone": "America/New_York",
  "schedule": ["after 9pm and before 7am on every weekday", "every weekend"],
  "commitMessageSuffix": "ðŸ¤–",
  "labels": ["dependencies"],
  "reviewers": ["team:pagerinc/frontend"],
  "encrypted": {
    "npmrc": ""
  }
}
