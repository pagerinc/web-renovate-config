{
  "description": "Pager configuration for web projects",
  "extends": [
    "config:js-app",
    ":automergePatch",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "groupName": "cerebral monorepo",
      "description": "cerebral monorepo",
      "sourceUrlPrefixes": [
        "https://github.com/cerebral/cerebral"
      ]
    },
    {
      "groupName": "rollup plugins monorepo",
      "description": "rollup plugins monorepo",
      "sourceUrlPrefixes": [
        "https://github.com/rollup/plugins"
      ]
    },
    {
      "description": "Auto update non-major Pager dependencies",
      "packagePatterns": ["^@pgr/", "^@pager/"],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "pager",
      "schedule": "at any time",
      "stabilityDays": 0,
      "automerge": true
    },
    {
      "description": "Auto update non-major safe web dependencies",
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "packagePatterns": ["^@fortawesome/", "^@sentry/", "^lodash."],
      "packageNames": [
        "axios",
        "mixpanel-browser",
        "moment",
        "socket.io-client",
        "twilio-video",
        "vue",
        "vuex",
        "react",
        "react-dom",
        "react-redux",
        "redux",
        "styled-components",
        "styled-normalize"
      ],
      "automerge": true
    },
    {
      "description": "Auto update patch safe web dependencies",
      "updateTypes": ["patch", "pin", "digest"],
      "packageNames": ["redux-saga", "react-router-dom", "reselect"],
      "automerge": true
    }
  ],
  "stabilityDays": 1,
  "timezone": "America/New_York",
  "schedule": ["after 9pm and before 7am on every weekday", "every weekend"],
  "commitMessageSuffix": "ðŸ¤–",
  "labels": ["dependencies"],
  "reviewers": ["team:frontend"],
  "encrypted": {
    "npmrc": ""
  }
}
